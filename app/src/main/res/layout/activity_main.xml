<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dekstop_martha.imadedwimarthayana_1202150061_m1.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/makan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Makan Malam"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dengan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/makan2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="dengan Milea"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/namamakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dengan2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/jumlahmakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/namamakanan"
            android:layout_alignStart="@+id/namamakanan"
            android:layout_below="@+id/namamakanan"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jumlahmakanan"
            android:layout_marginTop="54dp"
            android:layout_toLeftOf="@+id/dengan2"
            android:layout_toStartOf="@+id/dengan2"
            android:text="EATBUS"
            android:background="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/a"
            android:layout_alignBottom="@+id/a"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:text="ABNORMAL"
            android:background="@color/colorAccent"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
